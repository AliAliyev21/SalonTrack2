@using SalonTrack.Models
@model List<ServiceTask>

@{
    ViewData["Title"] = "Görülən İşlər";
}

<div class="container py-4">
    <h2 class="mb-4">📋 Görülən İşlər</h2>

    <a class="btn btn-success mb-3" asp-action="Create">➕ Yeni İş Əlavə Et</a>

    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>İşçi</th>
                    <th>Tarix</th>
                    <th>Xidmət</th>
                    <th>Qiymət</th>
                    <th>Ödəniş Tipi</th>
                    <th>Əməliyyat</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.User?.UserName</td>
                        <td>@item.Date.ToString("dd.MM.yyyy HH:mm")</td>
                        <td>@item.Description</td>
                        <td>@item.Price.ToString("0.00") ₼</td>
                        <td>@(item.IsCredit ? "Nisyə" : "Nağd")</td>
                        <td>
                            <form asp-action="Delete" method="post" onsubmit="return confirm('Bu işi silmək istədiyinizə əminsiniz?');">
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" class="btn btn-danger btn-sm">🗑️ Sil</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
